<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_informations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_information_image"
                android:layout_width="120dp"
                android:layout_height="93dp"
                android:layout_margin="8dp"
                android:src="@drawable/legend" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/linearLayout"
            android:singleLine="true"
            android:text="刀塔传奇刀塔传奇刀塔传奇"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_information_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_information_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/linearLayout"
            android:layout_toRightOf="@id/linearLayout"
            android:text="疯狂的小雨滴增长速度极快，它会淹没你的家园哦！" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_information_content"
            android:layout_alignStart="@id/tv_information_content"
            android:layout_below="@id/tv_information_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tv_information_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/browse"
                android:text="1000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_information_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/time"
                android:text="2016-1-1"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="#eeeeee" />

</LinearLayout>