<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_experience_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/default_round_head" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_experience_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/linearLayout"
            android:singleLine="true"
            android:text="芭芭拉"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_experience_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_experience_content"
            android:layout_alignRight="@+id/tv_experience_content"
            android:layout_alignTop="@id/tv_experience_name"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:text="进行中" />

        <TextView
            android:id="@+id/tv_experience_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_experience_time"
            android:layout_alignStart="@+id/ll_experience_time"
            android:layout_below="@+id/ll_experience_time"
            android:layout_marginTop="5dp"
            android:text="本人技术略渣，主要是想认识些新朋友一起玩lol。 组个队，开个黑，没事high一下,爱玩网游的小伙伴赶快来找我呀！"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_experience_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_experience_name"
            android:layout_alignStart="@+id/tv_experience_name"
            android:layout_below="@+id/tv_experience_type">

            <TextView
                android:id="@+id/tv_experience_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/browse"
                android:text="1000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_experience_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/time"
                android:text="2016-1-15"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <!--分割线-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/dotted_line" />

</LinearLayout>