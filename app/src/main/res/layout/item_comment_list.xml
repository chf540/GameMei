<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_informations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_comment_user_icon"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_margin="8dp"
                android:src="@mipmap/portrait" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/linearLayout"
            android:singleLine="true"
            android:text="会游泳的鱼"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_comment_user_name"
            android:layout_alignStart="@+id/tv_comment_user_name"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/time"
            android:text="1个小时之前"
            android:textColor="#8f949b"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_comment_user_name"
            android:layout_alignEnd="@+id/tv_information_content"
            android:layout_alignRight="@+id/tv_information_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tv_information_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/reply"
                android:text="100"
                android:textColor="#8f949b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_information_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/like_normal"
                android:text="30"
                android:textColor="#8f949b"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_information_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_comment_time"
            android:layout_alignStart="@+id/tv_comment_time"
            android:layout_below="@+id/tv_comment_time"
            android:layout_marginBottom="5dp"
            android:text="疯狂的小雨滴增长速度极快，它会淹没你的家园哦！它会淹没你的家园哦！"
            android:textColor="#333333" />

        <!--分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/tv_information_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/dotted_line" />
    </RelativeLayout>


</LinearLayout>