<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_qa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qa_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/default_round_head" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_qa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/linearLayout"
            android:singleLine="true"
            android:text="芭芭拉"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_qa_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_qa_content"
            android:layout_alignRight="@+id/tv_qa_content"
            android:layout_alignTop="@id/tv_qa_name"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:text="进行中"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_qa_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_qa_time"
            android:layout_alignStart="@+id/ll_qa_time"
            android:layout_below="@+id/ll_qa_time"
            android:layout_marginTop="5dp"
            android:text="疯狂的小雨滴增长速度极快，它会淹没你的家园哦！"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_qa_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_qa_name"
            android:layout_alignStart="@+id/tv_qa_name"
            android:layout_below="@+id/tv_qa_type">

            <TextView
                android:id="@+id/tv_qa_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/browse"
                android:text="1000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_qa_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/time"
                android:text="2016-1-15"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <!--分割线-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/dotted_line" />

</LinearLayout>